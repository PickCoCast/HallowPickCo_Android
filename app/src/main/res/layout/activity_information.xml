<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationActivity">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_marginTop="11dp"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="110dp"
        android:layout_marginLeft="110dp"
        android:text="캐릭터 정보보기"
        android:textSize="20dp"
        android:textStyle="bold" />



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/piona"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_below="@+id/tv_title"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/constraintLayout"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="-15dp"
        app:srcCompat="@drawable/img_ghost" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="26.7dp">

                <TextView
                    android:id="@+id/txt_info_title"
                    android:layout_width="58dp"
                    android:layout_height="31dp"
                    android:text="피오나"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    tools:layout_editor_absoluteX="28dp" />

                <TextView
                    android:id="@+id/textview-txt_info_tag"
                    android:layout_width="39dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginBottom="3dp"
                    android:text="사람"
                    tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="397dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:text="전투력"
                    tools:layout_editor_absoluteX="110dp"
                    tools:layout_editor_absoluteY="362dp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/customRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="109dp"
                    tools:layout_editor_absoluteY="382dp" />
            </LinearLayout>


            <View
                android:id="@+id/view2"
                android:layout_width="330dp"
                android:layout_height="0.1dp"
                android:layout_marginTop="19.2dp"
                android:layout_gravity="center"
                android:background="#474141"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="450dp" />

            <TextView
                android:id="@+id/txt_info_description"
                android:layout_width="305dp"
                android:layout_height="64dp"
                android:layout_marginTop="15.8dp"
                android:layout_gravity="center"
                android:text="애니메이션 '슈렉'의 피오나 공주에서 따온 신조어. 낮에는 취미나 사회 활동에 시간과 돈을 투자하는 30~40대 신 주부층을 가리킨다."
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="479dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
            <TextView
                android:layout_gravity="center"
                android:textSize="20dp"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginLeft="40dp"
                android:text="이 캐릭터를 현재 "
                android:layout_marginTop="5dp"
                />
                <TextView
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:id="@+id/txt_info_like"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:text="25"
                    android:textStyle="bold"
                    android:textColor="#673AB7"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:text="명이 좋아합니다."
                    android:layout_marginTop="5dp"
                    />


            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_info_buy"
                android:layout_width="243dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:color="@drawable/round_corner"
                android:text="코스튬 보러가기"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="#ffff"
                android:textStyle="bold"
                tools:layout_editor_absoluteY="634dp"
                android:background="@drawable/btn_bg"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>